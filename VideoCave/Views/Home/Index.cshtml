@model SearchParametersViewModel;
@using VC.Commom.Enumerables;

@{
    ViewData["Title"] = "Início";
}

<div class="text-center">
    <h1 class="display-2">Bem vindo</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<div class="text-center">
    <h1 class="display-3">O que você quer assistir hoje?</h1>
</div>

<form asp-controller="Home" asp-action="Search" method="post">
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="SearchType" class="sr-only">Procurar por</label>
            <select asp-for="SearchType" asp-items="Html.GetEnumSelectList<SearchTypes>()" class="form-control"></select>
        </div>

        <div class="form-group col-md-10">
            <input type="text" asp-for="SearchText" class="form-control" id="searchText" />
        </div>
    </div>

    <div class="form-row text-center">
        <div class="col-md-12">
            <button type="submit" class="btn btn-dark">Buscar</button>
        </div>
    </div>
</form>