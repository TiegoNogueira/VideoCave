@model VideoViewModel

@{
    ViewData["Title"] = "Video Details";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<div>
    <table class="table table-light">
        <tr>
            <td rowspan="3">
                <img src=@Model.ThumbnailhqUrl/>
            </td>
            <td>
                <h6><strong>@Model.Titulo</strong></h6>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Descrição:</strong> @Model.Descricao
            </td>
        </tr>
        <tr>
            <td>
                <strong>Data de Publicação:</strong> @Model.DataPublicacao
            </td>
        </tr>
    </table>
</div>
